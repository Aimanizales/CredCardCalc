{
    "paths": {
        "assets": ["app/assets/**"],
        "css": {
            "app": "app/styles/app.scss",
            "vendor": [
                "node_modules/purecss/build/base-min.css",
                "node_modules/purecss/build/pure-min.css",
                "node_modules/purecss/build/grids-responsive-min.css"
            ]
        },
        "hbs": {
            "templates": ["app/templates/**/*.hbs", "!app/templates/partials/**"],
            "partials": "app/templates/partials"
        },
        "js": {
